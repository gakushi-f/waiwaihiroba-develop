{% form_theme form 'Form/form_div_layout.twig' %}

<div class="ec-headerAllSearch">
    <form method="get" class="searchform" action="{{ path('product_list') }}">
        <div class="ec-headerAllSearch__keywordSearch">
            <div class="ec-input ec-headerAllSearch__keywordText">
                {{ form_widget(form.name, {'id': null, 'attr': {'class': 'search-name', 'placeholder' : 'common.search_product_farmer' }} ) }}
            </div>
            <button class="ec-headerAllSearch__keywordBtn" type="submit">
                <img class="ec-image-inlineBtn" src="{{ asset('assets/img/waiwaihiroba/button/svg/black/search.svg') }}" alt="{{'common.search'|trans}}" />
            </button>
        </div>
    </form>
</div>
